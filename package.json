    "stt",
    "speech",
    "wake-word",
    "jarvis",
    "voice-input"
  ],
  "author": "Enes Sahin <menesahin99@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Menesahin/claude-voice-light.git"
  },
  "homepage": "https://github.com/Menesahin/claude-voice-light#readme",
  "dependencies": {
    "commander": "^12.0.0",
    "sherpa-onnx-node": "^1.12.20",
    "tar": "^7.5.2",
    "unbzip2-stream": "^1.4.3"
  },
  "optionalDependencies": {
    "sherpa-onnx-darwin-arm64": "^1.12.20",
    "sherpa-onnx-darwin-x64": "^1.12.20",
    "sherpa-onnx-linux-arm64": "^1.12.20",
    "sherpa-onnx-linux-x64": "^1.12.20"
