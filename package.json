  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/tar": "^6.1.13",
    "@types/unbzip2-stream": "^1.4.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
